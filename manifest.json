{
    "manifest_version": 2,

    "name": "TEMP Focused Pomodoro",
    "description": "INSERT DESCRIPTION",
    "version": "1.0",
    "options_page": "options-page/options.html",
    
    "browser_action":{
        //"default_popup": "popup.html"
    },

    "background": {
        "scripts":[
            "main.js",
            "background/alarm.js",
            "background/context-menu/block-site.page.js"
        ]
    },
    "content_scripts":[{
      "matches":["<all_urls>"],
      "js":["content-scripts/blocksite.js"],
      "all_frames": true,
      "run_at": "document_end"  
    }],
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "contextMenus",
        "tabs"
    ]
}